@page
@model AbbyRestaurantWeb.Pages.Customer.Cart.IndexModel

<form method="post">

    <br />
    @if (Model.ShoppingCartList.Count() == 0)
    {
        <p>Please add items to shopping cart.</p>
    }
    else
    {
        <div>
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 container">
                        <div class="row">
                            <div class="col-6 mt-1">
                                <h3>SHOPPING CART</h3>
                            </div>
                            <div class="col-6 text-end">
                                <a href="~/Customer/Home/Index" class="btn btn-outline-info">CONTINUE SHOPPING</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.ShoppingCartList)
                        {
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-2 text-center py-2">
                                    <img src="@item.MenuItem.Image" alt="@item.MenuItem.Name" class="rounded" width="120" height="80" />
                                </div>
                                <div class="col-12 text-sm-center col-md-5 text-md-start col-md-5 pt-md-2">
                                    <h4><strong>@item.MenuItem.Name</strong></h4>

                                    <div class="badge bg-primary text-center">
                                        @item.MenuItem.Category.Name
                                    </div>
                                    <div class="badge bg-info text-center">
                                        @item.MenuItem.FoodType.Name
                                    </div>
                                </div>
                                <div class="col-12 text-sm-center col-md-5 text-md-start row pt-3">
                                    <div class="col-4 pt-md-1">
                                        <h6><strong>$@item.MenuItem.Price <span class="text-muted">x</span> @item.Count </strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <button type="submit" class="btn btn-outline-info btn-sm" asp-page-handler="plus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-plus-circle"></i>
                                        </button>
                                        <button type="submit" class="btn btn-outline-warning btn-sm" asp-page-handler="minus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-dash-circle"></i>
                                        </button>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-end">
                                        <button type="submit" class="btn btn-danger" asp-page-handler="remove" asp-route-cartId="@item.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }

                        <div class="row">
                            <div class="col-12 col-md-5">
                            </div>
                            <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-dark">
                                        <span class="text-info"> Total (CAD)</span>
                                        <strong class="text-info">$ <span id="txtOrderTotal">@Model.CartTotal.ToString("0.00")</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>


                    </div>
                    <div class="card-footer">
                        <div class="col-12 col-lg-4 offset-lg-8 col-md-6 offset-md-6">
                            <a asp-page="Summary" class="btn btn-success form-control">Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</form>
